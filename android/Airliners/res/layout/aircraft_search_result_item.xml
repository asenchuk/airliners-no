<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingBottom="5dp">

    <FrameLayout
            android:layout_width="320dp"
            android:layout_height="240dp">

        <ImageView
                android:id="@+id/aircraft_search_result_item_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        <ProgressBar
                android:id="@+id/aircraft_search_result_item_image_progress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/aircraft_item_aircraft_group_title"
            style="@style/AircraftItemAttributesGroupHeader"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_airline"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_registration"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_aircraft"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/aircraft_item_location_date_group_title"
            style="@style/AircraftItemAttributesGroupHeader"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_place"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_country_date"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/aircraft_item_author_group_title"
            style="@style/AircraftItemAttributesGroupHeader"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_author"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/AircraftItemAttributeTextSigneLine"/>


</LinearLayout>