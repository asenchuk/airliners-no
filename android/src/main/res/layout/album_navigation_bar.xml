<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal"
              android:gravity="center_vertical">

    <ImageButton
            android:id="@+id/album_navigation_bar_prev_button"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_prev"
            android:contentDescription="@string/content_desc_prev_btn"
            style="@style/AlbumNavigationBarButton"/>

    <TextView
            android:id="@+id/album_navigation_bar_position"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"/>

    <ImageButton
            android:id="@+id/album_navigation_bar_next_button"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_action_next"
            android:contentDescription="@string/content_desc_next_btn"
            style="@style/AlbumNavigationBarButton"/>

</LinearLayout>