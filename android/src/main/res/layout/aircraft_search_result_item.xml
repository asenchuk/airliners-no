<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"
              android:background="@drawable/bordered_block_background">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

        <net.taviscaron.airliners.views.AspectConstantImageView
                android:id="@+id/aircraft_search_result_item_image"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:aspectRatio="1.5"/>

        <ProgressBar
                android:id="@+id/aircraft_search_result_item_image_progress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
            android:id="@+id/aircraft_search_result_item_airline"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/AircraftItemShortAttributeText"/>

    <TextView
            android:id="@+id/aircraft_search_result_item_aircraft"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/AircraftItemShortAttributeText"/>

</LinearLayout>